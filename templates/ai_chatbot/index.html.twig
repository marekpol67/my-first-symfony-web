{% extends 'base.html.twig' %}

{% block title %}AI Chatbot{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-robot"></i> AI Chatbot
                    </h3>
                </div>
                <div class="card-body">
                    {# Flash messages #}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <p class="text-muted mb-4">
                        Opýtaj sa AI asistenta na čokoľvek! Odpovie ti v slovenčine.
                    </p>

                    <form method="POST" action="{{ path('ai_chatbot_submit') }}">
                        <div class="mb-3">
                            <label for="question" class="form-label">Tvoja otázka:</label>
                            <textarea 
                                class="form-control" 
                                id="question" 
                                name="question" 
                                rows="4" 
                                placeholder="Napr: Ako funguje internet?"
                                required
                            ></textarea>
                        </div>

                        <select name="model" class="form-select">
                            <option value="llama-3.1-8b-instant">Llama 3.1 8B (rýchly)</option>
                            <option value="llama-3.1-70b-versatile">Llama 3.1 70B (presný)</option>
                            <option value="mixtral-8x7b-32768">Mixtral 8x7B</option>
                        </select>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i> Opýtaj sa AI
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center text-muted">
                <small>
                    <i class="bi bi-info-circle"></i> 
                    Powered by Groq API (llama-3.1-8b-instant)
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}